<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".Dev_info_Screen">

    <!-- Top Background Curve -->
    <View
        android:id="@+id/topBackground"
        android:layout_width="412dp"
        android:layout_height="453dp"
        android:background="@drawable/details_squar"
        android:backgroundTint="#8A2520"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/backarrow"
        android:contentDescription="Back"
        android:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/devtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer Details"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Circular Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="186dp"
        android:layout_height="186dp"
        android:src="@drawable/devimg"
        app:layout_constraintTop_toBottomOf="@id/devtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/infoCard"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="39dp">

            <TextView
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:background="@drawable/rounded_input"
                android:padding="12dp"
                android:text="Name : SEHAN MINDULA"
                android:textStyle="bold"
                android:layout_marginTop="31dp"/>

            <TextView
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:text="Student No : 2022t01533"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:layout_marginTop="31dp" />

            <TextView
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:text="Personal statement : Think Different"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:layout_marginTop="31dp" />

            <TextView
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:text="Release version : 1.0.0"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="31dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="BACK"
        android:backgroundTint="#89241F"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/infoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
