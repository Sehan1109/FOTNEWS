<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Signin_Screen">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardSignIn"
        android:layout_width="316dp"
        android:layout_height="587dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="165dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="165dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
                android:id="@+id/applogoSignin"
                android:layout_width="147dp"
                android:layout_height="147dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="84dp"
                android:layout_marginBottom="360dp"
                app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/username"
            android:layout_width="245dp"
            android:layout_height="46dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="267dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="274dp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:fontFamily="@font/arial"
            android:inputType="text"
            android:hint="Enter Your Username"
            android:textColor="#6B6B6B"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="254dp"
            android:layout_height="46dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="366dp"
            android:layout_marginRight="31dp"
            android:layout_marginBottom="175dp"
            android:background="@drawable/rounded_input"
            android:ems="10"
            android:fontFamily="@font/arial"
            android:inputType="text"
            android:hint="Enter Your Password"
            android:textColor="#6B6B6B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textusername"
            android:layout_width="69dp"
            android:layout_height="16dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="251dp"
            android:layout_marginRight="212dp"
            android:layout_marginBottom="320dp"
            android:fontFamily="@font/arial"
            android:text="Username" />

        <TextView
            android:id="@+id/textpass"
            android:layout_width="69dp"
            android:layout_height="16dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="212dp"
            android:layout_marginBottom="221dp"
            android:fontFamily="@font/arial"
            android:text="Password" />

        <TextView
            android:id="@+id/forotpass"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="422dp"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="147dp"
            android:fontFamily="@font/arial"
            android:text="Forgot password?"
            android:textColor="#03A9F4"
            android:textSize="11sp" />

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="152dp"
            android:layout_height="42dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="465dp"
            android:layout_marginRight="82dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#89241F"
            android:fontFamily="@font/arialroundedmtbold"
            android:text="LOGIN"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/Dontacc"
            android:layout_width="162dp"
            android:layout_height="21dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="524dp"
            android:layout_marginRight="82dp"
            android:layout_marginBottom="42dp"
            android:fontFamily="@font/arial"
            android:text="Don't have an account?"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/signuplink"
            android:layout_width="52dp"
            android:layout_height="22dp"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="524dp"
            android:layout_marginRight="82dp"
            android:layout_marginBottom="42dp"
            android:fontFamily="@font/arial"
            android:text="Sign up"
            android:textColor="#03A9F4"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>